        </div>
        <div class="col">

        each post in posts
           
                <div class="card" style="width: 18rem;display:inline-block" id="#{post.id}">
                    <div class="card-body">
                        <h6 class="card-title">Наименование </h6>
                        <h5 class="card-title">#{post.name} </h5>
                        <h6 class="card-title">Тикер </h6>
                        <h6 class="card-subtitle mb-2 text-muted">#{post.tiker}</h6>

                        <a href="/redact/#{post.id}" class="card-link">редакт.</a>
                        <a  class="card-link" href="/deletes/#{post.id}">удалить</a>
                    </div>
                </div>

        </div>
        </div>
